<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TariffsActivity"
    android:background="#FFFFFF" >
    
    <com.onurersen.baykus35.customization.CustomTextView
        android:id="@+id/firstStopStartView"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tariff_stop"
        android:layout_width="wrap_content"
        android:textColor="#999999"
        android:paddingLeft="@dimen/fragment_tariff_first_stop_start_view_padding_left"
        android:textSize="@dimen/fragment_tariff_first_stop_start_view_text_size" />
    
    <com.onurersen.baykus35.customization.CustomTextView
        android:id="@+id/lastStopStartView"
        android:layout_toRightOf="@+id/firstStopStartView"
        android:layout_height="wrap_content"
        android:text="@string/tariff_stop"
        android:layout_width="wrap_content"
        android:textColor="#999999"
        android:paddingLeft="@dimen/fragment_tariff_last_stop_start_view_padding_left"
        android:textSize="@dimen/fragment_tariff_last_stop_start_view_text_size" />

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstStopStartView"
            android:id="@+id/listView" />

</RelativeLayout>
